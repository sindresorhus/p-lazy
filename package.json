{
	"name": "p-lazy",
	"version": "5.0.0",
	"description": "Create a lazy promise that defers execution until it's awaited or when `.then()`, `.catch()`, or `.finally()` is called",
	"license": "MIT",
	"repository": "sindresorhus/p-lazy",
	"funding": "https://github.com/sponsors/sindresorhus",
	"author": {
		"name": "Sindre Sorhus",
		"email": "sindresorhus@gmail.com",
		"url": "https://sindresorhus.com"
	},
	"type": "module",
	"exports": {
		"types": "./index.d.ts",
		"default": "./index.js"
	},
	"sideEffects": false,
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"test": "xo && ava && tsd"
	},
	"files": [
		"index.js",
		"index.d.ts"
	],
	"keywords": [
		"promise",
		"lazy",
		"defer",
		"deferred",
		"then",
		"catch",
		"fulfilled",
		"async",
		"function",
		"await",
		"promises",
		"bluebird"
	],
	"devDependencies": {
		"ava": "^6.2.0",
		"tsd": "^0.31.2",
		"xo": "^0.59.3"
	},
	"xo": {
		"rules": {
			"promise/prefer-await-to-then": "off",
			"unicorn/no-thenable": "off"
		}
	}
}
